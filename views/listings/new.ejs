<%- layout("layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h2>Create a new listing</h2>

    <form method="post" action="/listings" enctype="multipart/form-data" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" type="text" class="form-control" required />
        <div class="valid-feedback">Title looks good</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" class="form-control" required></textarea>
        <div class="invalid-feedback">Description required</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Upload Image</label>
        <!-- âœ… IMPORTANT: name="image" (not listing[image]) -->
        <input name="image" id="image" class="form-control" type="file" accept="image/*" />
      </div>

      <div class="row">
        <div class="mb-3 col-4">
          <label for="price" class="form-label">Price</label>
          <input name="listing[price]" class="form-control" type="number" required />
          <div class="invalid-feedback">Please enter price</div>
        </div>
        <div class="mb-3 col-8">
          <label for="country" class="form-label">Country</label>
          <input name="listing[country]" class="form-control" type="text" required />
          <div class="invalid-feedback">Please enter country</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input name="listing[location]" class="form-control" type="text" required />
        <div class="invalid-feedback">Please enter location</div>
      </div>

      <button class="btn btn-dark add-btn">Add</button>
    </form>
  </div>
</div>
<script src="/javascripts/formValidation.js"></script>